@using BolaoTI.Dominio;
@model List<Fase>
@{
    var grid = new WebGrid(Model, rowsPerPage: 20);
    var quantidade = Model.Count();
}
@helper displayNome(Fase Fase)
{
    <b>@Html.DisplayFor(model => Fase.Nome)</b><br />
    <span style="font-size: small; color: red">Começa: </span><span>@Html.DisplayFor(model => Fase.DataInicio)</span> <br />
    <span style="font-size: small; color: red">Termina:</span> <span>@Html.DisplayFor(model => Fase.DataFim)</span>
}
@helper displayCapacidade(Fase Fase)
{

}
@grid.GetHtml(tableStyle: "table table-striped table-hover", columns: new[]{
    grid.Column(BolaoTI.Resources.Field.Fase_Nome_Field, format: d=> displayNome((Fase)d.Value)),
    grid.Column(format: d => Html.ActionLink(BolaoTI.Resources.View.Link.Action_Remover_Link, "Deletar", new { id = d.Id },
            new { @class = "btn btn-danger remover" }))
})
<p><strong>@BolaoTI.Resources.View.Label.Label_Quantidade: </strong>@quantidade</p>
