@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink(User.Identity.GetUserName(), "Manage", "Account", routeValues: null, htmlAttributes: new { title = BolaoTI.Resources.View.Link.Action_Editar_Link })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">@BolaoTI.Resources.View.Label.Label_LogOff</a></li>
        </ul>
    }
}
else
{

    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink(BolaoTI.Resources.View.Label.Label_Cadastrar, "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink(BolaoTI.Resources.View.Label.Label_Login, "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
