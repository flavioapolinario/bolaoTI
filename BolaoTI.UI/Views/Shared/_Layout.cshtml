<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @Html.ActionLink(BolaoTI.Resources.View.Menu.Home_Titulo_menu, "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse ">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(BolaoTI.Resources.View.Menu.Home_Inicial_menu, "Index", "Home")</li>
                    <li>@Html.ActionLink(BolaoTI.Resources.View.Menu.Home_Regras_menu, "Regras", "Home")</li>
                    <li><a onclick="window.open('https://globoesporte.globo.com/futebol/copa-do-mundo/classificacao/');" href="#">@BolaoTI.Resources.View.Menu.Home_TabelaJogos_menu</a></li>
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink(BolaoTI.Resources.View.Menu.Home_Aposta_menu, "Index", "Aposta")</li>
                        <li>@Html.ActionLink(BolaoTI.Resources.View.Menu.Home_Ranking_menu, "Listar", "Ranking")</li>
                    }
                    @if (User.IsInRole(BolaoTI.Resources.Configuration.Role_Padrao_Admin))
                    {                        
                        <li>@Html.ActionLink(BolaoTI.Resources.View.Menu.Home_Admin_menu, "Admin", "Home")</li>                        
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <h6>Bolão TI - @BolaoTI.Utils.FieldUtil.DataAtualFusoHorario()
            </h6>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
