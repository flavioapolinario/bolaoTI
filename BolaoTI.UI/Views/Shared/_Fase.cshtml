@model BolaoTI.UI.ViewsModel.FaseViewModel

@using (Html.BeginForm(BolaoTI.Resources.View.Link.Action_Index_Link, ViewData["Controller"].ToString(), FormMethod.Post, new { @class = "form-inline" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(null, new { @class = "alert alert-danger" })

    <div class="form-group">
        @Html.DropDownListFor(model => model.FaseId, Model.Fases, new { @class = "form-control", })
    </div>
    <div class="form-group ">
        <input type="submit" value="@BolaoTI.Resources.View.Link.Action_Partidas_Link" class="btn btn-default" />
    </div>
}