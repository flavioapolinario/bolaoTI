@model BolaoTI.UI.ViewsModel.UsuarioViewModel

<h2>@BolaoTI.Resources.View.Link.Action_Editar_Link @BolaoTI.Resources.Classes.Usuario_Class</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(null, new { @class = "alert alert-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.Nome)
        @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email)
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Telefone)
        @Html.TextBoxFor(model => model.Telefone, new { @class = "form-control" })
    </div>

    <!-- Perfis-->
    <div class="form-group">
        @Html.Label(BolaoTI.Resources.Field.Usuario_Perfil_Field)
        @foreach (var item in Model.PerfilList)
        {
        <div class="checkbox">
            <label>
                <input type="checkbox" name="SelectedPerfil" value="@item.Value" checked="@item.Selected" />
                @Html.Label(item.Text, new { @class = "control-label" })
            </label>
        </div>
        }
    </div>

    <!-- Organizações -->
    <div class="form-group">
        @Html.Label(BolaoTI.Resources.Field.Usuario_Organizacoes_Field)
        @foreach (var item in Model.OrganizacoesList)
        {
        <div class="checkbox">
            <label>
                <input type="checkbox" name="SelectedOrganizacao" value="@item.Value" checked="@item.Selected" />
                @Html.Label(item.Text, new { @class = "control-label" })
            </label>
        </div>
        }
    </div>



    <button type="submit" class="btn btn-lg btn-primary">@BolaoTI.Resources.View.Link.Action_Salvar_link </button>
    @Html.ActionLink(BolaoTI.Resources.View.Link.Action_Voltar_Link, "Listar", "Usuario", null, new { @class = "btn btn-lg btn-default" })
}

@section scripts
{
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

}
