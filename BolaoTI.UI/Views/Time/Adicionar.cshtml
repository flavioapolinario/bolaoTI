@model BolaoTI.UI.ViewsModel.TimeViewModel

<h2>@BolaoTI.Resources.View.Link.Action_Novo_Link @BolaoTI.Resources.Classes.Time_Class</h2>

@using (Html.BeginForm("adicionar", "Time", FormMethod.Post, new { id = "formCadastrar" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(null, new { @class = "alert alert-danger" })
    <hr />
    <div class="form-group">
        @Html.LabelFor(model => model.Nome)
        @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NomeAbreviado)
        @Html.TextBoxFor(model => model.NomeAbreviado, new { @class = "form-control" })
    </div>
    
    <div class="form-group">
        @Html.LabelFor(model => model.BandeiraCaminho)
        @Html.TextBoxFor(model => model.BandeiraCaminho, new { @class = "form-control" })
    </div>    

    <button type="submit" class="btn btn-lg btn-primary">@BolaoTI.Resources.View.Link.Action_Salvar_link </button>
    @Html.ActionLink(BolaoTI.Resources.View.Link.Action_Voltar_Link, "Listar", "Time", null, new { @class = "btn btn-lg btn-default" })
}

@section scripts
{
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

}
