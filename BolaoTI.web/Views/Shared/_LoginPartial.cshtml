@if (Request.IsAuthenticated)
{
    <text>
    Data: <b>@ViewBag.DataAtual</b> |
    Número Participantes:<b> @ViewBag.NumeroParticipantes </b>|
    Total Arrecadado:<b> @ViewBag.TotalArrecadado </b>| 
    @if(String.IsNullOrEmpty((string)@ViewBag.ExhibitionName))
    {
       @: Opa, @Html.ActionLink(User.Identity.Name, "Manage", "Account", routeValues: null, htmlAttributes: new { @class = "username", title = "Manage" })!
    }
    else
    {
        @: Opa, @Html.ActionLink((string)@ViewBag.ExhibitionName, "Manage", "Account", routeValues: null, htmlAttributes: new { @class = "username", title = "Manage" })!
    }
    
    @{
        
    }
    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
        {
        @Html.AntiForgeryToken()
        <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
        }
    </text>
}
else
{
    <ul>
        @*<li>@Html.ActionLink("Registrar", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>*@
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
